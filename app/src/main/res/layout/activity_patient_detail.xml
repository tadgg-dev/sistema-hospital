<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/logo_osde_azul" />

    <TextView
        android:id="@+id/patientDetailsTextView"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Datos del paciente"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/showPatientFirstName"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailFistName"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre"
        android:textAlignment="center"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/showPatientLastName"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailLastName"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showPatientDNI"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="DNI"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailDNI"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="DNI"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showPatientMedicalCode"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Codigo de obra social"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailMedicalCode"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Codigo"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showPatientDateOfBirthday"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Fecha de nacimiento"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailDateOfBirthday"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nacimiento"
        android:textAlignment="center"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/showPatientDetailGender"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Genero"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailGender"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="genero"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showPatientDetailPhone"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Telefono"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailPhone"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Telefono"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/showPatientDetailAddress"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Direccion"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patientDetailAddress"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Dirreccion"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonGoToUpdatePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Editar paciente"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDeletePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Eliminar Paciente"
        android:backgroundTint="@color/red"
        />


</LinearLayout>